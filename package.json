{
  "name": "live-polling-platform",
  "version": "1.0.0",
  "description": "A real-time live polling platform with admin and audience panels",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
